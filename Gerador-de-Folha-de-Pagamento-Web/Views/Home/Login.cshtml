@model Gerador_de_Folha_de_Pagamento_Web.Models.Funcionario_Login
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="../css/login.css">
<title>Login</title>

<section>
    <div class="form-box">
        <div class="itens-box">
            <div class="logo">
                <img src="../img/logo.jfif" alt="logo_ataron">
            </div>

            <div class="formulario">
                <h2>LOGIN</h2>
        
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            if (ViewBag.LoginStatus != null)
                            {
                                if (ViewBag.LoginStatus == 0)
                                {
                                    <h1>CPF ou Senha Inválidos</h1>
                                }
                            }

                    <div class="form">
                        <img src="../img/login/homem-usuario.png" alt="homem">
                         @Html.TextBoxFor(funcionario => funcionario.CPF, new {@placeholder = "CPF"})
                    </div>

                    <div class="form">
                        <img src="../img/login/chaves.png" alt="chaves">
                        @Html.PasswordFor(funcionario => funcionario.Senha, new {@placeholder = "Senha"})
                    </div>
                            
                    <button type="submit" value="Login" class="button">   Fazer Login   </button>
                        }
            </div>
        </div>
    </div>
</section>